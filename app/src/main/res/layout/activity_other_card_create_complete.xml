<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/real_black"
        tools:context=".ui.cardpack.OtherCardCreateCompleteActivity">

        <TextView
            android:id="@+id/tv_othercardcreate_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카드나를 만들었어요!"
            android:textAppearance="@style/create_card_complete"
            android:textColor="@color/white_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="타인 소개를 작성했어요!" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lav_othercardcreate_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_card_complete"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>