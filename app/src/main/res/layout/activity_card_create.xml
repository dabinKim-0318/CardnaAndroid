<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.cardpack.CardCreateActivity">

        <TextView
            android:id="@+id/tv_make_cardme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="카드나 작성"
            android:textAppearance="@style/cardpack_bottomsheet_title"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleCentered="true"
            app:titleTextColor="@color/white" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_make_cardme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_in_scrollview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_choose_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="85dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle_text_hint_radius_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_choose_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="32dp"
                        android:layout_marginTop="84dp"
                        android:src="@drawable/ic_item_group"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_choose_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="88dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="center"
                        android:text="카드에 들어갈\n이미지를 넣어 보세요!"
                        android:textColor="@color/white_3"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/cl_choose_img"
                        app:layout_constraintEnd_toEndOf="@+id/iv_choose_img"
                        app:layout_constraintStart_toStartOf="@+id/iv_choose_img"
                        app:layout_constraintTop_toBottomOf="@id/iv_choose_img" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:includeFontPadding="false"
                    android:text="나는"
                    android:textColor="@color/white_1"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_choose_img" />


                <EditText
                    android:id="@+id/et_keyword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:ems="14"
                    android:hint="키워드 중심으로 포현해보세요"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:paddingStart="0dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/white_1"
                    android:textColorHint="@color/white_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_title" />

                <TextView
                    android:id="@+id/tv_count_of_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white_3"
                    app:layout_constraintEnd_toEndOf="@id/et_keyword"
                    app:layout_constraintTop_toBottomOf="@id/et_keyword"
                    android:text="0/14"
                    tools:text="0/14" />

                <EditText
                    android:id="@+id/et_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:ems="200"
                    android:padding="0dp"
                    android:gravity="top"
                    android:hint="더 자세하게 적어볼까요? \n설명, 자랑, 경험 등 어떤 내용도 좋아요 :)"
                    android:includeFontPadding="false"
                    android:minLines="7"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/white_1"
                    android:textColorHint="@color/white_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/et_keyword"
                    app:layout_constraintTop_toBottomOf="@id/tv_count_of_keyword" />

                <TextView
                    android:id="@+id/tv_count_of_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white_3"
                    android:text="3/200"
                    app:layout_constraintTop_toBottomOf="@id/et_detail"
                    app:layout_constraintEnd_toEndOf="@id/et_detail"
                    tools:text="3/200" />

                <Button
                    android:id="@+id/btn_create_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rectangle_main_green_radius_10"
                    android:text="카드나 생성"
                    android:textFontWeight="600"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/et_detail"
                    app:layout_constraintStart_toStartOf="@+id/et_detail"
                    app:layout_constraintTop_toBottomOf="@id/tv_count_of_detail" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
