<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="15dp"
        tools:context=".ui.cardpack.CardCreateActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tb_titleBar"
            app:title="카드 작성"
            android:textSize="18sp"
            app:titleCentered="true"
            app:titleTextColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle_text_hint_radius_10"
            android:id="@+id/cl_edit_image"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_titleBar"
            app:layout_constraintBottom_toTopOf="@id/tv_title">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_icon_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_edit_image_hint"
                android:layout_marginTop="90dp"
                android:src="@drawable/ic_item_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_image_hint"
                android:gravity="center"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_icon_group"
                android:text="카드에 들어갈\n이미지를 넣어 보세요!"
                android:textColor="@color/text_hint" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_keyword"

            android:text="나는"
            android:layout_marginTop="21dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_keyword"
            android:ems="14"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_finish_text"
            android:hint="키워드 중심으로 포현해보세요"
            android:backgroundTint="@color/edit_text_bottom"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:textColor="@color/white"
            android:textColorHint="@color/text_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_finish_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_keyword"
            app:layout_constraintBottom_toBottomOf="@id/et_keyword"
            android:text="!"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_text_count"
            tools:text="3/14"
            android:textColor="@color/text_hint"
            app:layout_constraintEnd_toEndOf="@id/et_keyword"
            app:layout_constraintTop_toBottomOf="@id/et_keyword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_detail"
            android:textColorHint="@color/text_hint"
            android:minLines="7"
            android:ems="200"
            android:gravity="top"
            android:hint="더 자세하게 적어볼까요? \n설명, 자랑, 경험 등 어떤 내용도 좋아요 :)"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_text_count"
            app:layout_constraintBottom_toTopOf="@id/tv_edit_detail_count" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_detail_count"
            android:textColor="@color/text_hint"
            tools:text="3/200"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/et_detail"
            app:layout_constraintBottom_toTopOf="@id/btn_create_card" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_create_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rectangle_main_green_radius_10"
            android:textFontWeight="600"
            android:text="카드나 생성"
            android:padding="1dp"
            android:layout_marginBottom="50dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
