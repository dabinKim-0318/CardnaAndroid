<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.cardpack.CardCreateActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tb_titleBar"
            app:title="카드 작성"
            android:textSize="18sp"
            app:titleCentered="true"
            app:titleTextColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_text_hint_radius_10"
            android:id="@+id/cl_edit_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_titleBar"
          >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_icon_group"
                android:layout_marginTop="83dp"
                android:layout_marginHorizontal="31dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_edit_image_hint"
                android:src="@drawable/ic_item_group"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_image_hint"
                android:gravity="center"
                android:layout_marginBottom="87dp"
                app:layout_constraintBottom_toBottomOf="@id/cl_edit_image"
                app:layout_constraintStart_toStartOf="@+id/iv_icon_group"
                app:layout_constraintEnd_toEndOf="@+id/iv_icon_group"
                app:layout_constraintTop_toBottomOf="@id/iv_icon_group"
                android:text="카드에 들어갈\n이미지를 넣어 보세요!"
                android:textColor="@color/white_3" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/et_keyword"

            android:text="나는"
            android:layout_marginTop="21dp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="18sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_keyword"
            android:ems="14"
            android:includeFontPadding="false"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="키워드 중심으로 포현해보세요"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:textColor="@color/white"
            android:textColorHint="@color/white_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_text_count"
            tools:text="3/14"
            android:textColor="@color/white_3"
            app:layout_constraintEnd_toEndOf="@id/et_keyword"
            app:layout_constraintTop_toBottomOf="@id/et_keyword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_detail"
            android:textColorHint="@color/white_3"
            android:minLines="7"
            android:ems="200"
            android:gravity="top"
            android:includeFontPadding="false"
            android:hint="더 자세하게 적어볼까요? \n설명, 자랑, 경험 등 어떤 내용도 좋아요 :)"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_text_count"
            app:layout_constraintBottom_toTopOf="@id/tv_edit_detail_count" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_detail_count"
            android:textColor="@color/white_3"
            tools:text="3/200"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/et_detail"
            app:layout_constraintBottom_toTopOf="@id/btn_create_card" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_create_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rectangle_main_green_radius_10"
            android:textFontWeight="600"
            android:text="카드나 생성"
            android:padding="1dp"
            android:layout_marginBottom="42dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
