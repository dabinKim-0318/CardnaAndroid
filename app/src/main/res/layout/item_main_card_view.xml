<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/main_purple"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_black_radius_2"
            android:id="@+id/iv_main_card"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/book" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_title"
            app:layout_constraintTop_toBottomOf="@id/iv_main_card"
            app:layout_constraintStart_toStartOf="@id/iv_main_card"
            android:text="힘이 들 땐 하늘을 봐..."
            android:textSize="16sp"
            android:textColor="@color/real_black"
            android:fontFamily="@font/pretendard_bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
