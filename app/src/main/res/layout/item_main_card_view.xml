<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_maincard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_right_null_black_radius_2">

        <ImageView
            android:id="@+id/iv_main_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/dummy_img_test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_main_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="힘이 들 땐 하늘을 봐..."
            android:textColor="@color/real_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_card_image"
            app:layout_constraintStart_toStartOf="@+id/iv_main_card_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
